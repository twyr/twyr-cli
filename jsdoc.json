{
	"tags": {
		"allowUnknownTags": true
	},
	"source": {
		"include": ["./", "./README.md"],
		"exclude": [
			"docs",
			"node_modules",
			"test"
		],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "(node_modules/|docs/)"
	},
	"plugins": [
		"plugins/markdown",
		"plugins/summarize"
	],
	"opts": {
		"template": "./node_modules/jsdoc-template",
		"destination": "./docs/",
		"readme": "./README.md",
		"package": "./package.json",
		"encoding": "utf8",
		"recurse": true,
		"recurseDepth": 4000,
		"verbose": true
	},
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": false,
        "referenceTitle": "Twy'r CLI",
        "disableSort": false,
		"default": {
			"outputSourceFiles": true
		}
	}
}
