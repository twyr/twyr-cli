{
	"tags": {
		"allowUnknownTags": true
	},
	"source": {
		"include": ["./", "./README.md"],
		"exclude": [
			"docs",
			"node_modules",
			"test"
		],
		"includePattern": ".+\\.js(doc)?$",
		"excludePattern": "(node_modules/|docs/)"
	},
	"plugins": [
		"plugins/markdown",
		"plugins/summarize"
	],
	"opts": {
		"template": "./node_modules/docdash2",
		"destination": "./../",
		"readme": "./README.md",
		"package": "./package.json",
		"encoding": "utf8",
		"recurse": true,
		"recurseDepth": 4000,
		"verbose": true
	},
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": false,
        "referenceTitle": "Twy'r CLI",
        "disableSort": false,
		"default": {
			"outputSourceFiles": true
		}
	},
	"docdash": {
		"static": true,
		"sort": true,
		"openGraph": {
			"title": "PlantWorks Web Application Server",
			"type": "documentation",
			"image": "./tenant_assets/www/img/logo.png",
			"site_name": "PlantWorks Web Application Server",
			"url": "https://plantworks.github.io/webapp-server"
		},
		"meta": {
			"title": "PlantWorks Web Application Server",
			"description": "PlantWorks Web Application Server",
			"keyword": "plant.works, plantworks"
		},
		"search": true,
		"collapse": true,
		"typedefs": false,
		"removeQuotes": "none",
		"scripts": []
	}
}
